<%- model_class = SurveyTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Elenco Template" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:attivo) %></th>
      <th><%= model_class.human_attribute_name(:categoria) %></th>
      <th><%= model_class.human_attribute_name(:descrizione) %></th>
      <th><%= "modificato il" %></th>
      <th><%=t '.actions', :default => "Azioni" %></th>
    </tr>
  </thead>
  <tbody>
    <% @survey_templates.each do |survey_template| %>
      <tr>
        <td><%= link_to survey_template.id, edit_survey_template_path(survey_template) %></td>
        <td><%= survey_template.nome %></td>
        <td><%= survey_template.attivo %></td>
        <td><%= survey_template.categoria %></td>
        <td><%= survey_template.descrizione %></td>
        <td><%=l survey_template.updated_at.to_date %></td>
        <td>
          <%= link_to t('.edit', :default => "Export su Excel"), export_survey_template_path(survey_template), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => "Duplica"), "#", :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => "Edit"),edit_survey_template_path(survey_template), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => "Elimina"),
                      survey_template_path(survey_template),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_survey_template_path,
            :class => 'btn btn-primary' %>
